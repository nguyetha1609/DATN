<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- AppBar / Toolbar custom (có thêm TextView “Lưu” ở góc phải) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_add_expense"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:elevation="4dp"
        app:contentInsetStartWithNavigation="0dp">  <!-- Giữ để không có padding -->

        <!-- 1. ImageButton cho nút back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_left"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/desc_back"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- 2. Tiêu đề -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/title_add_expense"
            android:textColor="@color/textPrimary"
            android:textSize="18sp" />

        <!-- 3. TextView “Lưu” ở góc phải -->
        <TextView
            android:id="@+id/toolbar_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:clickable="true"
            android:focusable="true" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Nội dung chính nằm trong ScrollView để khi bàn phím bật vẫn cuộn được -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/container_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- 1. Input số tiền (dạng EditText)-->
            <LinearLayout
                android:id="@+id/item_amount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_amount_box"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/imgCategory"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_category"
                    app:tint="@color/iconColor" />

                <EditText
                    android:id="@+id/edtAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="230dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:text="@string/hint_amount"
                    android:textSize="18sp"
                    android:textColor="@color/textPrimary" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₫"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>


            <!-- 2. Card đầu tiên chứa: Loại, Ngày, Giờ, Ghi Chú -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:backgroundTint="@color/cardBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Divider giữa các item -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor" />

                    <!-- Item: Ngày -->
                    <LinearLayout
                        android:id="@+id/item_date"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendarr"
                            app:tint="@color/iconColor" />

                        <TextView
                            android:id="@+id/tvDateLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_date"
                            android:textSize="16sp"
                            android:textColor="@color/textPrimary"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor" />

                    <!-- Item: Giờ -->
                    <LinearLayout
                        android:id="@+id/item_time"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_clock"
                            app:tint="@color/iconColor" />

                        <TextView
                            android:id="@+id/tvTimeLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_time"
                            android:textSize="16sp"
                            android:textColor="@color/textPrimary"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor" />

                    <!-- Item: Ghi Chú -->
                    <LinearLayout
                        android:id="@+id/item_note"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_note"
                            app:tint="@color/iconColor" />

                        <EditText
                            android:id="@+id/edtNoteHint"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/hint_note"
                            android:textSize="16sp"
                            android:textColor="@color/textHint"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3. Card thứ hai: Vị Trí và Bạn bè -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:backgroundTint="@color/cardBackground">

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
