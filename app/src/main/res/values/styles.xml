<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Project_04" parent="Theme.AppCompat.Light.NoActionBar">
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->

        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>




    <style name="TimeFrameButton">
        <item name="android:background">@drawable/timeframe_button_selector</item>
        <item name="android:textColor">@color/time_frame_text_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TabStyle">
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:textSize="16sp"
    </style>
    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- Nút trái (Chi tiêu) -->
    <style name="ToggleButtonLeft" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeLeft</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/selector_toggle_text</item>
        <item name="backgroundTint">@color/selector_toggle_background</item>
        <item name="strokeColor">@color/selector_toggle_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Nút phải (Thu nhập) -->
    <style name="ToggleButtonRight" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeRight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/selector_toggle_text</item>
        <item name="backgroundTint">@color/selector_toggle_background</item>
        <item name="strokeColor">@color/selector_toggle_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Bo góc trái -->
    <style name="ShapeLeft" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <!-- Bo góc phải -->
    <style name="ShapeRight" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

</resources>