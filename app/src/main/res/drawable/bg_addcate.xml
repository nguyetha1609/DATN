<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" /> <!-- Màu nền khi nhấn -->
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu trắng như bạn đã dùng -->
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>
